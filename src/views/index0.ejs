<script>
    let menu = document.querySelector('#menu-bar');
    let head = document.querySelector('.head .navbar');

    menu.onclick = () => {
        head.classList.toggle('active');
    };

    window.onscroll = () => {
        head.classList.remove('active');
        if (window.scrollY > 60) {
            document.querySelector('#menu-bar').classList.add('active');
        } else {
            document.querySelector('#menu-bar').classList.remove('active');
        }
    };
    // Modal functionality
    // Function to handle modal behavior
    function setupModal(showButtonId, modalId, closeButtonId) {
    const showButton = document.getElementById(showButtonId);
    const modal = document.getElementById(modalId);
    const closeButton = document.getElementById(closeButtonId);

    if (showButton && modal && closeButton) {
        // Show modal when the "Show More" button is clicked
        showButton.onclick = function () {
            modal.style.display = "block";
        };

        // Close the modal when the "X" button is clicked
        closeButton.onclick = function () {
            modal.style.display = "none";
        };

        // Close the modal if clicked outside of the modal content
        window.addEventListener("click", function (event) {
            if (event.target === modal) {
                modal.style.display = "none";
            }
        });
    } else {
        console.error(`Elements with IDs "${showButtonId}", "${modalId}", or "${closeButtonId}" not found.`);
    }
}

// Setup modals
